{
  "manifest_version": 2,

  "name": "Structify",
  "description": "Helps parse the structure of webpages with some human help",
  "version": "0.1",

  "permissions": [
    "http://localhost:4000/*",
    "https://www.readability.com/*",
    "tabs",
    "storage",
    "activeTab"
  ],
  "background": {
    "page": "html/background.html",
    "persistent": false
  },
  "sandbox": {
    "pages": ["html/renderer.html"]
  },
  "browser_action": {
    "default_icon": "img/icon.png",
    "default_popup": "html/popup.html"
  }
}

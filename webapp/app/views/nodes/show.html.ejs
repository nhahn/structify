<div class="hero-unit">
  <h2 class="title"><%= node.title %></h2>
  <%- linkTo('Edit this node', editNodePath(params.id), {class: 'btn pull-right'}); %>
  <%- linkTo('Back to list', nodePath(''), {class: 'btn pull-right'}); %>
</div>

<h2>Node Properties</h2>
<% for(var i in node) { -%>
<% if(i !== 'saved') { -%>
<div class="row list-item">
  <div class="span4">
    <h3><%= i %></h3>
  </div>
  <div class="span8">
    <h3><i class="icon-list-alt"></i><span class="<%= i %>"><%= node[i] %></span></h3>
  </div>
</div>
<% } -%><% } -%>

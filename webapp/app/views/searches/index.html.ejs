<div class="hero-unit">
  <h2>All Searches</h2>
  <%- linkTo('Create a new Search', addSearchPath, {class: 'btn pull-right'}); %>
</div>

<div id="searches-list">
<% if (searches) { %>
<% for (var i = 0, ii = searches.length; i < ii; i++) { %>
  <div class="row list-item" id="search-<%= searches[i].id; %>">
    <div class="span8">
      <h3><%- linkTo(searches[i].query, searchPath(searches[i].id)); %></h3>
    </div>
    <div class="span4">
      <h3><i class="icon-list-alt"></i><%= searches[i].id; %></h3>
    </div>
  </div>
<% } %>
<% } %>
</div>

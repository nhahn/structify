<div class="hero-unit">
  <h2 class="query"><%= search.query %></h2>
  <%- linkTo('Edit this search', editSearchPath(params.id), {class: 'btn pull-right'}); %>
  <%- linkTo('Back to list', searchPath(''), {class: 'btn pull-right'}); %>
</div>

<h2>Search Properties</h2>
<% for(var i in search) { -%>
<% if(i !== 'saved') { -%>
<div class="row list-item">
  <div class="span4">
    <h3><%= i %></h3>
  </div>
  <div class="span8">
    <h3><i class="icon-list-alt"></i><span class="<%= i %>"><%= search[i] %></span></h3>
  </div>
</div>
<% } -%><% } -%>
